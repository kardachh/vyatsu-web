    div(class="swiper h-fit w-5/6")
        // Additional required wrapper
        div(class="swiper-wrapper ")
            // Slides
            +useful_slide("Банк России","https://cbr.ru", "/vyatsu-web/rcfg43/img/useful/bankros.png", "Описание")
            +useful_slide("Банк России","https://cbr.ru", "/vyatsu-web/rcfg43/img/useful/bankros.png", "")
