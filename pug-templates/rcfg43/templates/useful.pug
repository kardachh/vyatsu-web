        // If we need pagination
    div(class="swiper-pagination !-bottom-10")
        // If we need navigation buttons
        // If we need scrollbar
        //.swiper-scrollbar
    div(class="swiper-button-prev !text-[rgb(2,169,234)]")
    div(class="swiper-button-next !text-[rgb(2,169,234)]")


script.
    const swiper = new Swiper('.swiper', {
        // Optional parameters
        // effect: 'coverflow',
        grabCursor: true,
        // centeredSlides: true,
        slidesPerView: 'auto',
        loop: true,
        speed: 500,
        // coverflowEffect: {
        //     rotate: 20,
        //     stretch: 0,
        //     depth: 150,
        //     modifier: 1,
        //     slideShadows: false,
        // },
        breakpoints: {
            0: { /* when window >=0px - webflow mobile landscape/portriat */
                slidesPerView: 1,
                spaceBetween: 0,
            },
            767: { /* when window >= 767px - webflow tablet */
                slidesPerView: 2,
                spaceBetween: 0,
            },
            1280: { /* when window >= 988px - webflow desktop */
                slidesPerView: 4,
                spaceBetween: 20,
            }

        },
        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
        },
        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        // And if we need scrollbar
        scrollbar: {
            el: '.swiper-scrollbar',
        },
    });
